<style>
  .search-btn{
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover{
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;    
  }
  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }
  
  /* Navbar Aibnb your home icon */
  .airbnb{
      padding: 0.5rem 0.7rem;
      font-weight: 500;
  }

  .airbnb:hover{
      border-radius: 25px;
      background-color: #F7F7F7;
  }

  @media screen and (max-width: 767px)
  {
    .search-btn{
      padding: 0 0.5rem;
      font-size: 0.7rem;
    }
    .search-input{
      padding: 0.4rem 2.2rem;
      font-size: 0.8rem;
      width:50%;
    }
    .airbnb{
      padding: 0.4rem 0rem;
    }
  }

@media screen and (max-width: 534px) {
    .search-btn{
      padding: 0 0.4rem;
    }
    .search-input{
      padding: 0.3rem 2rem;
      font-size: 0.5rem;
      width:40%;
    }
    .airbnb{
      padding: 0.3rem 0rem;
    }
}
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        <div class="navbar-nav ms-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2 search-input" type="search" name="search" placeholder="Search destinations">
            <button class="btn search-btn" type="submit">
             <i class="fa-solid fa-magnifying-glass"></i>Search 
            </button>
          </form>
        </div>
        <div class="navbar-nav ms-auto">
          <a class="nav-link airbnb" href="/listings/new">Airbnb your home</a>
          <% if(!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
          <% } %>
          <% if(currUser) { %>
            <a class="nav-link" href="/logout">Logout</a>
          <% } %>
        
        </div>
      </div>
    </div>
  </nav>